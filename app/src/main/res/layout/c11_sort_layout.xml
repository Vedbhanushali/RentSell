            android:layout_height="match_parent"
            android:text="@string/c11_sort_low_high"/>
        <RadioButton
            android:id="@+id/c11_sort_high_low"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/c11_sort_high_low"/>
    </RadioGroup>

