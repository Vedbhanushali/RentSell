        <RadioButton
            android:id="@+id/c11_sort_oldest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/c11_sort_oldest"/>
        <RadioButton
            android:id="@+id/c11_sort_low_high"
