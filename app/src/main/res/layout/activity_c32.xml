<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".C32">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/c32_carouselView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/c32_backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/c12_back"
                app:backgroundTint="@android:color/transparent"
                app:pressedTranslationZ="0dp"
                app:elevation="0dp"
                app:borderWidth="1dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/c32_deleteFloatingBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/c12_delete"
                app:backgroundTint="@color/grey_200"
                app:elevation="0dp"
                app:borderWidth="1dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/c32_editBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/c32_deleteFloatingBtn"
                android:src="@drawable/c12_edit"
                app:backgroundTint="@color/grey_200"
                app:elevation="0dp"
                app:borderWidth="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/c32_editTextPropertyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                tools:text="Apartment"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:focusable="false"
                android:inputType="text"/>

            <EditText
                android:id="@+id/c32_editTextLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/c32_editTextPropertyName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/c11f1_c11f2_location_on"
                android:hint="location"
                android:textSize="18sp"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:inputType="text"/>
            <TextView
                android:id="@+id/c32_textFeature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_below="@id/c32_map"
                android:layout_alignParentRight="true"
                android:textColor="#ECC700"
                android:drawableEnd="@drawable/ic_baseline_star_24"
                tools:ignore="NotSibling"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:inputType="number"/>

            <EditText
                android:id="@+id/c32_editTextAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2000"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/c32_textFeature"
                android:layout_alignParentRight="true"
                android:textColor="?android:attr/colorPrimary"
                android:drawableStart="@drawable/c11f1_c11f2_rupee_indian"
                tools:ignore="NotSibling"
                android:drawablePadding="5dp"
                android:focusable="false"
                android:inputType="number"/>
        </RelativeLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:columnCount="4"
            android:rowCount="2"
            android:paddingBottom="40dp"
            android:layout_margin="10dp"
            android:numColumns="auto_fit"
            android:horizontalSpacing="10dp"
            android:id="@+id/c32_myGridLayout">

        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/c32_editTextResType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="land"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="right"
                android:focusable="false"
                android:inputType="text"/>
            <TextView
                android:id="@+id/c32_textFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/c32_editTextResType"
                android:layout_weight="1"
                android:gravity="center"
                android:text="for"
                android:textSize="17sp"
                android:textStyle="bold"
                android:focusable="false"
                android:inputType="text"/>

            <EditText
                android:id="@+id/c32_editTextType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/c32_textFor"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" Rent"
                android:textSize="17sp"
                android:textStyle="bold"
                android:focusable="false"
                android:inputType="text"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/c32_editTextDate"
                android:textSize="17sp"
                tools:text="02/02/20201"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:focusable="false"
                android:inputType="date"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/c21_others"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/c32_editTextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:text="not available"
            android:textSize="20dp"
            android:gravity="left"
            android:focusable="false"
            android:inputType="text"/>
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:hint="@string/c21_tidtype"-->
        <!--            android:textSize="20dp"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:gravity="left" />-->

        <!--<com.google.android.gms.maps.MapView-->
        <!--    android:id="@+id/mapview"-->
        <!--    android:layout_width="match_parent"-->
        <!--    android:layout_height="300dp"-->
        <!--    android:layout_margin="10dp"-->
        <!--    />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/c21_adress"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/c32_editTextAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            tools:text="gtvrtb"
            android:textSize="20dp"
            android:gravity="left"
            android:focusable="false"
            android:inputType="text"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/c21_location"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="20dp"
            android:id="@+id/c32_map"
            tools:context=".C32"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            tools:ignore="Instantiatable" />

        <Button
            android:id="@+id/c32_selectLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select location"
            android:layout_marginRight="20dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/c21_ownerInfo"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/ownerCard"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="73dp"
                android:layout_gravity="left|center"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/c12_imageViewUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#CAE1FF"
                    android:padding="5dp"

                    android:scaleType="centerCrop"
                    android:src="@drawable/c12_profile" />
            </androidx.cardview.widget.CardView>
            <EditText
                android:id="@+id/c32_editTexTNAME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ownerCard"
                tools:text="XYZ"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:focusable="false"
                android:inputType="textPersonName"/>
            <EditText
                android:id="@+id/c32_editTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/c32_editTexTNAME"
                android:layout_toRightOf="@id/ownerCard"
                android:text="not available"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp"
                android:focusable="false"
                android:inputType="phone"/>


        </RelativeLayout>
        <Button
            android:id="@+id/c32_buttonSellFastNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:text="@string/c32_sell_fast" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/c32_buttonUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="@string/c32_update" />
            <Button
                android:id="@+id/c32_buttonSold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="@string/c32_sold" />
            <Button
                android:id="@+id/c32_buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="@string/c32_cancel" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>